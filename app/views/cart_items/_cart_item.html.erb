<div class="cart-item-container">
  <div class="col-md-3 cart-item-image">
    <%= image_tag item.image, alt: item.title %>
  </div>
  <div class="col-md-6 cart-item-description">
    <h3><%= item.title %></h3>
    <h4><%= item.description %></h4>
    <p class="btn-pricing"><%= format_price(item.price) %></p>
    <p class="btn-pricing">Qty. <%= quantity %></p>
  </div>
  <div class="col-md-3">
    <%= button_to "Increase quantity", cart_items_path(item_id: item.id), class: "btn btn-success btn-font-size cart-item-buttons" %>
    <%= button_to "Decrease quantity", cart_items_path(item_id: item.id, subtract: true), class: "btn btn-warning btn-font-size cart-item-buttons" %>
    <%= button_to "Remove", cart_item_path(item.id), class: "btn btn-danger btn-font-size cart-item-buttons", method: "delete" %>
  </div>
  <div class="col-md-12 item-subtotal text-right">
    <h5 class= "green-font">
      Subtotal: <%= format_price(item.price * quantity) %>
    </h5>
  </div>
</div>
